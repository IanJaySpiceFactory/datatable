{
    "name": "ianjaybronola/spice-datatable",
    "description": "A Laravel package that seamlessly integrates Yajra DataTables with Bootstrap for a powerful and responsive data visualization experience.",
    "require": {
        "laravel/ui": "^4.2",
        "yajra/laravel-datatables": "^10.1",
        "illuminate/support": "^10.35"
    },
    "autoload": {
        "psr-4": {
            "Ianjaybronola\\SpiceDatatable\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Ian Jay Bronola",
            "email": "ian_bronola@spice-factory.ph"
        }
    ],
    "require-dev": {
        "pestphp/pest": "^2.28",
        "orchestra/testbench-core": "^8.17",
        "laravel/pint": "^1.13",
        "phpstan/phpstan": "^1.10"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
